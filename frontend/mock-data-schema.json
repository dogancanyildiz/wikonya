{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WikiKonya Mock Data Schema",
  "description": "Tüm sayfalar için mock data formatı",
  "type": "object",
  "properties": {
    "users": {
      "type": "array",
      "description": "Kullanıcı verileri",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" },
          "initials": { "type": "string" },
          "email": { "type": "string" },
          "avatar": { "type": "string" },
          "role": { "type": "string", "enum": ["yeni_gelen", "seyyah", "gezgin", "kasif_meraklisi", "konya_bilgesi"] },
          "totalCoins": { "type": "number" },
          "badges": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "icon": { "type": "string" },
                "description": { "type": "string" },
                "earnedAt": { "type": "string" }
              }
            }
          },
          "xp": {
            "type": "object",
            "properties": {
              "current": { "type": "number" },
              "nextLevel": { "type": "number" },
              "progress": { "type": "number", "minimum": 0, "maximum": 100 }
            }
          },
          "joinedAt": { "type": "string", "format": "date-time" },
          "location": { "type": "string" },
          "bio": { "type": "string" },
          "university": { "type": "string" }
        },
        "required": ["id", "name", "initials", "role", "totalCoins", "badges", "xp", "joinedAt"]
      }
    },
    "topics": {
      "type": "array",
      "description": "Başlık/Topic verileri",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "wikiContent": {
            "type": "object",
            "properties": {
              "id": { "type": "number" },
              "topicId": { "type": "number" },
              "content": { "type": "string" },
              "version": { "type": "number" },
              "createdAt": { "type": "string", "format": "date-time" },
              "updatedAt": { "type": "string", "format": "date-time" },
              "author": { "type": "object" },
              "usefulVotes": { "type": "number" },
              "notUsefulVotes": { "type": "number" },
              "isCurrent": { "type": "boolean" }
            }
          },
          "author": { "type": "object" },
          "category": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "views": { "type": "number" },
          "likes": { "type": "number" },
          "comments": { "type": "number" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "reliabilityScore": { "type": "number", "minimum": 0, "maximum": 100 },
          "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
          "approvedBy": { "type": "object" },
          "approvedAt": { "type": "string", "format": "date-time" },
          "rejectionReason": { "type": "string" }
        },
        "required": ["id", "title", "content", "author", "category", "createdAt", "updatedAt", "views", "likes", "comments", "tags"]
      }
    },
    "comments": {
      "type": "array",
      "description": "Yorum verileri",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "author": { "type": "string" },
          "authorInitials": { "type": "string" },
          "timeAgo": { "type": "string" },
          "content": { "type": "string" },
          "upvotes": { "type": "number" },
          "downvotes": { "type": "number" },
          "logicalVotes": { "type": "number" },
          "replies": { "type": "number" },
          "isUpvoted": { "type": "boolean" },
          "isDownvoted": { "type": "boolean" },
          "isLogical": { "type": "boolean" },
          "topicId": { "type": "number" },
          "parentId": { "type": "number" }
        },
        "required": ["id", "author", "authorInitials", "timeAgo", "content", "upvotes", "downvotes", "replies"]
      }
    },
    "discussions": {
      "type": "array",
      "description": "Tartışma feed verileri",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "author": { "type": "string" },
          "authorInitials": { "type": "string" },
          "category": { "type": "string" },
          "title": { "type": "string" },
