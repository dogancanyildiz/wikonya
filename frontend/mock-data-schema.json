          "availableFrom": { "type": "string", "format": "date" },
          "postedDate": { "type": "string", "format": "date" },
          "contact": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "phone": { "type": "string" },
              "email": { "type": "string" }
            }
          },
          "coordinates": {
            "type": "object",
            "properties": {
              "lat": { "type": "number" },
              "lng": { "type": "number" }
            }
          },
          "distance": { "type": "number" },
          "rating": { "type": "number" },
          "reviews": { "type": "number" }
