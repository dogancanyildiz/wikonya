        "required": ["id", "author", "authorInitials", "category", "title", "excerpt", "timeAgo", "likes", "comments"]
      }
    },
    "events": {
      "type": "array",
      "description": "Etkinlik verileri",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "title": { "type": "string" },
          "category": { "type": "string", "enum": ["student", "kbb"] },
          "image": { "type": "string" },
          "date": { "type": "string" },
          "time": { "type": "string" },
          "endTime": { "type": "string" },
          "location": { "type": "string" },
          "fullAddress": { "type": "string" },
          "participants": { "type": "number" },
          "maxParticipants": { "type": "number" },
          "description": { "type": "string" },
          "organizer": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "avatar": { "type": "string" },
              "role": { "type": "string" }
            }
          },
          "requirements": { "type": "array", "items": { "type": "string" } },
          "coordinates": {
            "type": "object",
            "properties": {
              "lat": { "type": "number" },
              "lng": { "type": "number" }
            }
          }
        },
        "required": ["id", "title", "category", "date", "time", "location", "description"]
      }
    },
    "housing": {
      "type": "array",
      "description": "Barınma ilanları",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
