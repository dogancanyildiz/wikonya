          "bedrooms": { "type": "number" },
          "bathrooms": { "type": "number" },
          "area": { "type": "number" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "views": { "type": "number" },
          "images": { "type": "array", "items": { "type": "string" } },
          "description": { "type": "string" },
          "features": {
            "type": "array",
